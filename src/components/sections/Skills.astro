---
import { t } from "i18next";
import { skills } from "@/data/skills";
import Heading from "../ui/Heading.astro";
import Section from "../ui/Section.astro";
---

<Section id="skills">
  <Heading level={2}>{t("sections.skills.title")}</Heading>

  <ul class="flex flex-wrap gap-2">
    {
      skills.map((skill) => (
        <li class="inline-flex list-none">
          <a
            class="rounded-full border-2 border-blue-500 px-2 py-1 text-blue-500 hover:bg-blue-500 hover:text-white"
            href={skill.url}
            target="_blank"
          >
            {skill.name}
          </a>
        </li>
      ))
    }
  </ul>
</Section>
